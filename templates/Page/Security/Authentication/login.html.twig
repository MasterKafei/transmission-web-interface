{% extends 'Layout/Public/base.html.twig' %}

{% block sub_title %}
    Connexion
{% endblock sub_title %}

{% block body %}
<div class="py-8 px-4 sm:px-6 lg:px-8">
    <h2 class="text-2xl font-bold mb-4 text-center">Connexion</h2>
    <div class="max-w-md mx-auto bg-slate-900 rounded-lg shadow-md overflow-hidden">
        <div class="px-4 py-6 sm:px-10">
            {{ form_start(form) }}
            <div class="mb-4">
                {{ form_label(form._username, 'Nom d\'utilisateur', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-300'}}) }}
                {{ form_widget(form._username, {'attr': {'class': 'w-full px-3 py-2 border rounded-md bg-gray-800 text-gray-300 focus:outline-none focus:ring focus:border-slate-300'}}) }}
            </div>
            <div class="mb-6">
                {{ form_label(form._password, 'Mot de passe', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-300'}}) }}
                {{ form_widget(form._password, {'attr': {'class': 'w-full px-3 py-2 border rounded-md bg-gray-800 text-gray-300 focus:outline-none focus:ring focus:border-slate-300'}}) }}
            </div>
            <div class="flex items-center justify-center">
                <button class="bg-slate-700 hover:bg-purple-900 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline focus:ring focus:ring-slate-300" type="submit">
                    Se connecter
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock body %}
