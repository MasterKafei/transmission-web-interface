{% extends 'Layout/Authenticated/base.html.twig' %}

{% block sub_title %}
    Uploader un torrent
{% endblock %}

{% block body %}
    <div class="py-8 px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold mb-4 text-center">Uploader un torrent</h2>
        <div class="max-w-md mx-auto bg-slate-900 rounded-lg shadow-md overflow-hidden">
            <div class="px-4 py-6 sm:px-10">
                {{ form_start(form) }}
                <div class="mb-4">
                    {% if form_errors(form) is not empty %}
                        <span class="text-red-700 font-bold">{{ form_errors(form) }}</span>
                    {% endif %}
                </div>
                <div class="mb-4">
                    {{ form_errors(form.savePath) }}
                    {{ form_label(form.savePath, 'Chemin de sauvegarde', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-300'}}) }}
                    {{ form_widget(form.savePath, {'attr': {'class': 'w-full px-3 py-2 border rounded-md bg-gray-800 text-gray-300 focus:outline-none focus:ring focus:border-blue-300', 'placeholder': '/downloads/complete/...'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_errors(form.url) }}
                    {{ form_label(form.url, 'Lien', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-300'}}) }}
                    {{ form_widget(form.url, {'attr': {'class': 'w-full px-3 py-2 border rounded-md bg-gray-800 text-gray-300 focus:outline-none focus:ring focus:border-blue-300', 'placeholder': 'https://...'}}) }}
                </div>

                <div class="mb-4">
                    Ou
                </div>
                <div class="mb-4">
                    {{ form_errors(form.file) }}
                    {{ form_widget(form.file, {'attr': {'class': 'w-full'}}) }}
                </div>

                <div class="flex items-center justify-center">
                    <button class="bg-slate-700 hover:bg-slate-800 font-bold py-2 px-4 rounded focus:ring focus:ring-slate-500"
                            type="submit">
                        Uploader
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
